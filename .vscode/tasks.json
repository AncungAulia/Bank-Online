{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "All compile c++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "./src/*.cpp",
                "-o",
                "./bin/BankOnline.exe"
            ]
        },
        {
            "label": "run + all compile",
            "type": "shell",
            "command": "./bin/BankOnline.exe",
            "dependsOn": ["All compile c++"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
